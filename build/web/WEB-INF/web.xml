<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>CenterServlet</servlet-name>
        <servlet-class>sample.Servlet.CenterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddInternCandidate</servlet-name>
        <servlet-class>sample.Servlet.AddInternCandidate</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddFresherCandidate</servlet-name>
        <servlet-class>sample.Servlet.AddFresherCandidate</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddExperienceCandidate</servlet-name>
        <servlet-class>sample.Servlet.AddExperienceCandidate</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RecruitmentServlet</servlet-name>
        <servlet-class>sample.Servlet.RecruitmentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CenterServlet</servlet-name>
        <url-pattern>/CenterServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddInternCandidate</servlet-name>
        <url-pattern>/AddInternCandidate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddFresherCandidate</servlet-name>
        <url-pattern>/AddFresherCandidate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddExperienceCandidate</servlet-name>
        <url-pattern>/AddExperienceCandidate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RecruitmentServlet</servlet-name>
        <url-pattern>/RecruitmentServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
